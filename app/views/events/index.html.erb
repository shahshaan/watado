<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Venue</th>
    <th>Location</th>
    <th>Date</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Length</th>
    <th>Image</th>
    <th>Category</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.venue %></td>
    <td><%= event.location %></td>
    <td><%= event.date %></td>
    <td><%= event.start_time %></td>
    <td><%= event.end_time %></td>
    <td><%= event.length %></td>
    <td><%= event.image %></td>
    <td><%= event.category %></td>
    <td><%= event.url %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

